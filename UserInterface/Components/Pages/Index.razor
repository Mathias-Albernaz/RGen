@page "/"
@rendermode InteractiveServer

@using System.ComponentModel.DataAnnotations

<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudText Typo="Typo.h2" Align="Align.Center">Nuevo Recibo</MudText>
<MudContainer MaxWidth="MaxWidth.Small">
    <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
        
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Titulo" HelperText="Max. 8 characters"
                                  @bind-Value="model.Titulo" For="@(() => model.Titulo)"/>
                    <MudTextField Label="Autor" HelperText="Iniciales" Class="mt-3"
                                  @bind-Value="model.Autor" For="@(() => model.Autor)"/>
                    <MudTextField Label="Detalle" HelperText="Opcional" Class="mt-3"
                                  @bind-Value="model.Detalle" For="@(() => model.Detalle)" InputType="InputType.Password"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Crear</MudButton>
                </MudCardActions>
            </MudCard>
        
    </EditForm>
</MudContainer>



@code {
    Form model = new Form();
    bool success;

    public class Form
    {
        [Required]
        [StringLength(8)]
        public string Titulo { get; set; }

        [Required]
        [StringLength(2)]
        public string Autor { get; set; }

        
        public string Detalle { get; set; }
        
    }

    private void OnValidSubmit(EditContext context)
    {
        success = true;
        StateHasChanged();
    }

}