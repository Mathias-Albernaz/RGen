@using Controladores
@inject ControladorItems ControladorItems

@inject ISnackbar Snackbar


<MudDialog>
    <TitleContent>
        Nuevo elemento
    </TitleContent>
    <DialogContent>
        <MudItem>
                    <MudNumericField @bind-Value="cantidad"  Label="Usar Shift + Rueda del raton" Variant="Variant.Outlined" Min="1"/>
                    <MudGrid Spacing="0">
                        <MudTextField @bind-Value="descripcion" Label="Descripcion" Variant="Variant.Outlined" Lines="3" Required="true"></MudTextField>
                        <MudTextField @bind-Value="identificador" Label="Identificador" Variant="Variant.Outlined" Lines="3" Required="true"></MudTextField>
                    </MudGrid>
                </MudItem>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {

    public int cantidad { get; set; } 
    public string descripcion { get; set; }
    public string identificador { get; set; }

    protected override void OnInitialized()
    {
        cantidad = 1;
        descripcion = identificador = "";
    }

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    
    

    private void Submit()
    {
        if (identificador != "" && descripcion != "")
        {
            ControladorItems.AgregarItem(cantidad, descripcion, identificador);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add("Todos los campos son obligatorios", Severity.Error);
        }
    } 
    
    private void Cancel() => MudDialog.Cancel();
}